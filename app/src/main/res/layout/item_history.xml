<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_antri"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/line"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/H_namapasien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pasien"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:layout_toRightOf="@id/iv_antri"/>

            <TextView
                android:id="@+id/H_noantri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PA-10"
                android:textSize="20sp"
                android:layout_toRightOf="@id/iv_antri"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/status"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/H_namapasien"
                android:text="berlangsung"
                android:textSize="10sp"
                android:layout_toRightOf="@id/iv_antri"
                android:layout_marginLeft="20dp"
                android:textColor="#E06C39"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>